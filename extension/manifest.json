{
  "manifest_version": 2,
  "name": "Place AH.nl Order",
  "description": "Extension helper to place a AH.nl order from https://gogetmeals.herokuapp.com",
  "version": "0.0.1",
  "permissions": ["cookies", "*://gogetmeals.herokuapp.com/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.ah.nl/*"],
      "js": ["load-ah.js"]
    },
    {
      "matches": ["http://localhost/*", "https://gogetmeals.herokuapp.com/*"],
      "js": ["load-shopping.js"]
    }
  ]
}
