{
  "name": "shopping-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "npm run test -- jest --watch --no-coverage",
    "start": "node app.js",
    "start:mock": "AH_API=ah-api.stub USE_MEMORY_DB=true node app.js",
    "test:api": "npm run start:mock & newman run api-tests/ShoppingAPItests.postman_collection.json -e api-tests/shopping.postman_environment.json",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "pre-commit": [
    "test"
  ],
  "jest": {
    "setupFiles": ["<rootDir>/.jest/setEnvVars.js"]  
  },
  "dependencies": {
    "@google-cloud/translate": "^4.2.1",
    "@material-ui/icons": "^4.11.2",
    "axios": "^0.21.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "debug": "~2.6.9",
    "dotenv": "^8.6.0",
    "express": "~4.16.1",
    "fs": "0.0.1-security",
    "gzip": "^0.1.0",
    "lowdb": "^1.0.0",
    "material-table": "^1.69.3",
    "mongodb": "^3.6.9",
    "morgan": "~1.9.1",
    "node-gzip": "^1.1.2",
    "paprika-api": "^1.0.3",
    "request-promise": "^4.2.6",
    "uuidv1": "^1.6.14"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "husky": "^4.3.8",
    "jest": "^24.9.0",
    "newman": "^5.2.4",
    "pre-commit": "^1.2.2",
    "prettier": "^2.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
}
